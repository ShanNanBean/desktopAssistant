<Window x:Class="PowerShellHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerShellHelper"
        xmlns:vm="clr-namespace:PowerShellHelper.ViewModels"
        mc:Ignorable="d"
        Title="PowerShellåŠ©æ‰‹" 
        Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- ç”¨æˆ·æ¶ˆæ¯æ ·å¼ -->
        <Style x:Key="UserMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="50,5,10,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <!-- AIæ¶ˆæ¯æ ·å¼ -->
        <Style x:Key="AIMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10,5,50,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <!-- å‘½ä»¤ä»£ç å—æ ·å¼ -->
        <Style x:Key="CommandBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="#263238"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- æ ‡é¢˜æ  -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15,10">
            <Grid>
                <TextBlock Text="PowerShell æ¡Œé¢åŠ©æ‰‹" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="âš™ è®¾ç½®" 
                           Command="{Binding OpenSettingsCommand}"
                           Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                           Foreground="White"
                           Margin="5,0"
                           Padding="10,5"/>
                    <Button Content="ðŸ“‹ åŽ†å²" 
                           Command="{Binding OpenHistoryCommand}"
                           Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                           Foreground="White"
                           Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- å¯¹è¯åŒºåŸŸ -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     Background="White">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource AIMessageStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Margin" Value="50,5,10,5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <!-- æ¶ˆæ¯å†…å®¹ -->
                                <TextBlock Text="{Binding Content}" 
                                          TextWrapping="Wrap"
                                          FontSize="14"/>

                                <!-- å‘½ä»¤å— -->
                                <Border Style="{StaticResource CommandBlockStyle}"
                                       Visibility="{Binding Command, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                  Text="{Binding Command.CommandText}" 
                                                  Foreground="#A5D6A7"
                                                  FontFamily="Consolas"
                                                  FontSize="13"
                                                  TextWrapping="Wrap"/>

                                        <StackPanel Grid.Row="1" 
                                                   Orientation="Horizontal" 
                                                   Margin="0,8,0,0">
                                            <Button Content="ðŸ“‹ å¤åˆ¶" 
                                                   Command="{Binding DataContext.CopyCommandCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding Command.CommandText}"
                                                   Padding="8,4"
                                                   Margin="0,0,5,0"
                                                   FontSize="12"/>
                                            <Button Content="â–¶ æ‰§è¡Œ" 
                                                   Command="{Binding DataContext.ExecuteCommandCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding Command}"
                                                   Padding="8,4"
                                                   FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- æ‰§è¡Œç»“æžœ -->
                                <Border Background="#FFFDE7" 
                                       CornerRadius="4" 
                                       Padding="10" 
                                       Margin="0,8,0,0"
                                       Visibility="{Binding ExecutionResult, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ExecutionResult}" 
                                              FontFamily="Consolas"
                                              FontSize="12"
                                              TextWrapping="Wrap"
                                              Foreground="#555"/>
                                </Border>

                                <!-- æ—¶é—´æˆ³ -->
                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                          FontSize="10"
                                          Foreground="#999"
                                          Margin="0,4,0,0"
                                          HorizontalAlignment="{Binding IsUser, Converter={StaticResource BoolToAlignmentConverter}}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- è¾“å…¥åŒºåŸŸ -->
        <Border Grid.Row="2" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0"
               Background="White"
               Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                        Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="14"
                        Padding="10"
                        VerticalAlignment="Center"
                        BorderBrush="#BDBDBD"
                        BorderThickness="1">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                       Content="å‘é€"
                       Command="{Binding SendMessageCommand}"
                       Margin="10,0,0,0"
                       Padding="20,10"
                       FontSize="14"
                       Background="#1976D2"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
            </Grid>
        </Border>

        <!-- çŠ¶æ€æ  -->
        <Border Grid.Row="3" 
               Background="#F5F5F5" 
               Padding="15,8"
               BorderBrush="#E0E0E0"
               BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                          FontSize="12"
                          Foreground="#666"
                          VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="å¤„ç†ä¸­..." 
                              FontSize="12"
                              Foreground="#666"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
